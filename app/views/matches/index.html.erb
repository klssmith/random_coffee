<h1>Draw Results</h1>

<% if @matches.any? %>
  <p>
    The last draw was made on <%= @draw_time %>
  </p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Person A</th>
        <th>Person B</th>
      </tr>
    </thead>
    <tbody>
      <% @matches.each do |match| %>
      <tr>
        <td><%= match.member1.try(:firstname) %> <%= match.member1.try(:lastname) %></td>
        <td><%= match.member2.try(:firstname) %> <%= match.member2.try(:lastname) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<% else %>
  There are no draw results
<% end %>
